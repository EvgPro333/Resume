<div>
	{{#with main}}
	<main>
		<section>
			{{> title data="All skills"}}
			<ul>
			{{#each skills}}
				{{!-- <li>{{this}}</li> --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
				{{!-- <li>{{name}} {{point}}</li> --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
				{{!-- <li>{{name}} ({{point}}) {{#if isTop}}(top){{/if}}</li> --}}
        {{!--                       ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
				{{!--                      <li>{{name}} <sup> ({{point}}) {{#if isTop}}(top){{/if}} {{#unless point}} (ще вивчаемо) {{/unless}}</sup></li> --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
				{{!-- <li> --}}
					{{!-- {{name}} ({{point}})  --}}
					{{!-- {{#if isTop}}(top){{/if}}  --}}
					{{!-- {{#unless point}} (ще вивчаемо) {{/unless}} --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
					{{!-- {{#if point includeZero=true}} (ще вивчаемо) {{/if}} --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
					{{!-- {{#unless point includeZero=true}} (не вивчаемо) {{/unless}} --}}
				{{!-- </li> --}}
        {{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
				<li>
					{{name}}
					{{#if point includeZero=true}} ({{ point}}) {{/if}}
					{{#if isTop}} (top) {{/if}}
					{{!-- {{#unless point}} (не вивчаємо) {{/unless}} --}}
					{{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
					{{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
					{{!-- {{#unless point}} (ще вивчаємо) {{/unless}} --}}
					{{!-- ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑         ↓↑↓   ↑↓↑ --}}
					{{#unless point}} 
						{{#if point includeZero=true}}(ще вивчаємо) {{/if}}
					{{/unless}}
				</li>
			{{/each}}
			</ul>
		</section>
	</main>
	{{/with}}
</div>