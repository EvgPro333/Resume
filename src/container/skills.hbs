<div>
	{{#with main}}
		<main>
			<section>
				{{!--0 {{> title data="All skills"}} --}}
				{{!-- ↓↑↓   ↑↓↑ --}}

				{{> title data="All skills" big=true}}
				<ul>
					{{!--0 <li>{{main.skills}}</li> --}}
					{{!-- ↓↑↓   ↑↓↑ --}}

					{{!--1 <li>{{main.skills.[0]}}</li> --}}
					{{!-- ↓↑↓   ↑↓↑ --}}

					{{!--2 {{#each main.skills}} --}}
						{{!--2 <li>{{this}}</li> --}}
					{{!--2 {{/each}} --}}
					{{!-- ↓↑↓   ↑↓↑ --}}

					{{#each skills}}
						{{!--3 <li>{{this}}</li> --}}
						<li>
							{{name}}
							{{#if point includeZero=true}} ({{ point}}) {{/if}}
							{{#if isTop}} (top) {{/if}}
							{{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
							{{#unless point}} 
								{{#if point includeZero=true}}(ще вивчаємо) {{/if}}
							{{/unless}}
						</li>
					{{/each}}
				</ul>
			</section>
			
			<section>
				{{> title data="My hobbies" big=false}}
				<ol>
				{{#each hobbies}}
					<li>
						{{name}} {{#if isMain}} (favourite) {{/if}}
					</li>
				{{/each}}
				</ol>
			</section>
		</main>
	{{/with}}
</div>