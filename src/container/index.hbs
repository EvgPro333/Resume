{{!-- ! ########################################################################################## HEADER --}}
<header>
	{{#with header}}
		<div class="row mt-5 mb-5"> 
			<div class="col-6"> 
				{{#with name}}
					<h6 class="ms-3"> {{firstname}} {{lastname}} </h6>
				{{/with}}
			</div>

			<div class="col-6 text-end"> 
				{{#with nameProject}}
					<h6> {{title}} </h6>
				{{/with}}
			</div>
		</div>
	{{/with}}
</header>

{{!-- ! ########################################################################################## MAIN --}}
<main>
	{{#with main}}
		<div class="row mt-5 mb-5"> 
			<div class="col-6"> 
				{{#with pageList}}
					<h3> {{title}} </h3>
				{{/with}}
				<p> {{description}} </p>
			</div>
		</div>
		
		<div class="row mt-5 mb-5"> 
		{{#each buttons}}
			<div class="mb-3 col-4">
				<a href="{{href}}" class="btn btn-primary"> {{text}} </a>
			</div>
		{{/each}}
	{{/with}}
		</div>
</main>












