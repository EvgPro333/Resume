{{!-- ! ########################################################################################## HEADER --}}
<header>
{{!-- ==================================================================================== HEADER/ Nav --}}
	<nav class="row mx-1">
		{{#with navigation}}
				<div class="card">
					<div class="card-body">
						<div class="nav">
							{{#each links}}
								<div>
									<a href="{{href}}" class="btn btn-link"> {{text}} </a>
								</div>
							{{/each}}
							<div>
								<a href="{{href}}" class="btn btn-link disabled"> Disabled </a>
							</div>
						</div>
					</div>
				</div>
		{{/with}}
	</nav>
</header>

{{!-- ! ########################################################################################## MAIN --}}
<main>
{{!-- ==================================================================================== FORMbLOCK --}}
<form action="" class="row gy-2">
	{{#with formBlock}}
{{!-- * ==================================================================================== MAIN - col-8 --}}
		<div class="col-8">
			<h1 class="mb-4 mx-2"> {{header}} </h1>

{{!-- ==================================================================================== FORMbLOCK/ Rating --}}
			{{#with rating}}
			<div class="mb-5 mx-2">
				<h5 class="form-label"> {{title}}: {{value}} </h5>
			</div>
			{{/with}}

{{!-- ==================================================================================== FORMbLOCK/ ActionBlock --}}
			{{#with actionBlock}}
				<div class="row mx-1">
					<div class="card-body">
						<div class="nav nav-tabs">  
{{!-- ==================================================================================== FORMbLOCK/ ActionBlock/ tabs --}}
							{{#each tabs}}
								<div class="nav-item col-4">  
									<a href="#" class="nav-link {{#if isActive}} active {{/if}} text-center p-2"> {{text}} </a>
								</div>
							{{/each}}
						</div>
					</div>
				</div>
				<hr class="mt-5 mb-5">

{{!-- ==================================================================================== FORMbLOCK/ ActionBlock/ report  --}}
				<div class="card">
					<div class="card-body">
						{{#with report}}
							<div class="card-title"> {{title}} </div>
							{{#with button}}
								<a href="link" class="btn btn-secondary text-center"> {{text}} </a>
							{{/with}}
						{{/with}}
					</div>
				</div>
			{{/with}}
			<hr class="mt-5 mb-5">

{{!-- ==================================================================================== FORMbLOCK/ FeedbackBlock  --}}
			<div>
				{{#with feedbackBlock}}
					<h2 class="mb-5"> {{title}} </h2>
					{{#each buttons}}
					{{!-- <div class="me-2"> --}}
						<a href="link" class="
						{{#if isWarning}} btn btn-warning {{/if}}
						{{#if isSuccess}} btn btn-success {{/if}}
						{{#if isDanger}} btn btn-danger {{/if}} me-2"> {{text}} </a>
					{{!-- </div> --}}
					{{/each}}
				{{/with}}
			</div>
		</div>

{{!-- * ==================================================================================== MAIN - col-4 --}}
		<div class="col-4">
{{!-- ==================================================================================== FORMbLOCK/ GoodsInfo  --}}
			{{#with goodsInfo}}
				<div class="card row mx-1 mb-3">
					<div class="col-7 mt-3">
{{!-- ==================================================================================== FORMbLOCK/ GoodsInfo/ photo-name  --}}
						<img class="card-img-top" src="{{photo}}" alt="picture">
					</div>
					<div class="card-body">
						<h5 class="card-title"> 
							{{name}}
						</h5>
					</div>
				</div>

{{!-- ==================================================================================== FORMbLOCK/ GoodsInfo/ price-buttons  --}}
				<div class="card mx-1 mb-3">
					<div class="card-body">
						<h5 class="card-title"> 
							{{price}}
						</h5>
						<p> {{#if inMarket}} Є в наявності {{/if}} </p>
						{{#each buttons}}
							<div class="mb-2">
								<a href="{{link}}" class="
								{{#if isPrimary}} btn btn-primary {{/if}}
								{{#if isSecondary}} btn btn-secondary {{/if}}"> {{text}} </a>
							</div>
						{{/each}}
					</div>
				</div>

{{!-- ==================================================================================== FORMbLOCK/ GoodsInfo/ seller  --}}
				<div class="card mx-1 ps-3 pt-3">
					{{!-- <div class="card-body mb-3"> --}}
						{{#with seller}}
							<p> {{title}}: <b> {{value}} </b> </p>
						{{/with}}
					{{!-- </div> --}}
				</div>

			{{/with}}
		</div>
	{{/with}}
</form>
<hr class="mt-5 mb-5">
			{{!-- ==================================================================================== MAIN/ ReviewList --}}
{{> reviewItem}}

			{{!-- ==================================================================================== MAIN/ Service --}}
	{{#with service}}
		<div class="card text-bg-success text-center">
			<div class="card-body"> 
				<h2 class="mb-4"> {{title}} </h2>
				<p class="mb-4"> {{description}} </p>
				{{#each buttons}}
					<div class="card-item"> 
						<a href="{{link}}" class="btn btn-primary mb-3"> {{text}} </a>
					</div>
				{{/each}}
			</div>
		</div>
	{{/with}}
	<hr class="my-5">

</main>

{{!-- ! ########################################################################################## FOOTER --}}
<footer class="row">
	{{#each footer}}
		<div class="col-2">
			{{#each this}}
				<div class="me-1">
					<a href="link" class="btn btn-link {{#if @last}}disabled{{/if}}"> {{text}} </a>
				</div>
			{{/each}}
		</div>
	{{/each}}
</footer>


