{{#with page_header}}
	<h1 class="text-center"> {{title}} </h1>
	<br>
	<p class="text-center text-uppercase"> {{description}} </p>
{{/with}}

<br>
<br>

{{#with section}}
{{!-- ===================================================================================================================== about_us --}}
	{{#with about_us}}
		<div class="card">
			<div class="card-body">
				{{#with title_list}}
					<div class="display-6 text-end"> {{main}} </div>
					<h2 class="text-end"> {{sub}} </h2>
				{{/with}}
				<br><br>
				{{#with button}}
					<button type="button" class="btn btn-outline-info"> {{text}} </button>
				{{/with}}
			</div>
		</div>
	{{/with}}

	<br>
	<br>
	
{{!-- ===================================================================================================================== agreement --}}
	{{#with advantage}}
		<div class="card">
			<div class="card-body">
				<div class="display-5"> {{title}} </div>
				<br>
				{{#with efficiency}}
					<div class="card">
						<div class="card-body">
							<div class="display-4"> {{title}} </div>
							<br>
							<h6> {{sub_title}} </h6>
							<br>
							<p> {{description}} </p>
							<br>
							<button type="button" class="btn btn-outline-warning"> {{button }}</button>
						</div>
					</div>
				{{/with}}

				<br>

				{{#with innovation}}
					<div class="card">
						<div class="card-body">
							<div class="display-4 text-center"> {{title}} </div>
							<br>
							<h6 class="text-center"> {{sub_title}} </h6>
							<br>
							<p class="text-center"> {{description}} </p>
							<br>
							<button type="button" class="btn btn-outline-warning"> {{button }}</button>
						</div>
					</div>
				{{/with}}

				<br>

				{{#with collaboration}}
					<div class="card">
						<div class="card-body">
							<div class="display-4 text-end"> {{title}} </div>
							<br>
							<h6 class="text-end"> {{sub_title}} </h6>
							<br>
							<p class="text-end"> {{description}} </p>
							<br>
							<button type="button" class="btn btn-outline-warning"> {{button }}</button>
						</div>
					</div>
				{{/with}}
			</div>
		</div>
	{{/with}}

	<br>
	<br>

{{!-- ===================================================================================================================== agreement --}}
	{{#with agreement}}
		<div class="card">
			<div class="card-body">
				<div class="display-5"> {{title}} </div>
				<br>
				{{#with info}}
					<div class="card">
						<div class="card-body">
							<h5> {{sub_title}} </h5>
							<br>
							<div class="card">
								<div class="card-body">
									{{#with detail}}
									<p> {{text}} </p>
									<br>
									<button type="button" class="btn btn-success"> {{button }}</button>
									{{/with}}
								</div>
							</div>
						</div>
					</div>
				{{/with}}
			</div>
		</div>
	{{/with}}

{{/with}}					{{!-- section --}}







